<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment.HomeFragmentSearchActivity">

    <ImageView
        android:id="@+id/close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/icon_close"
        android:layout_marginTop="45dp"
        android:layout_marginStart="16dp"
        android:onClick="close"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <EditText
        android:id="@+id/search_editText"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:hint="검색어를 입력해주세요"
        android:textColor="#909FBB"
        android:textColorHint="#909FBB"
        android:textSize="16sp"
        android:paddingStart="15dp"
        android:layout_marginTop="32dp"
        android:gravity="center_vertical"
        android:layout_marginEnd="15dp"
        android:background="@drawable/searchbox"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/close"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/searchicon"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:onClick="func_search"
        app:layout_constraintTop_toTopOf="@id/search_editText"
        app:layout_constraintEnd_toEndOf="@id/search_editText" />
</androidx.constraintlayout.widget.ConstraintLayout>