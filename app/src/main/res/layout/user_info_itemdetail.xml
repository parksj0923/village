<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingBottom="12dp"
    android:layout_height="wrap_content">


    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/texttext111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="빌려주는 사람"
        android:textColor="#909FBB"
        android:textSize="10sp"
        android:layout_marginTop="19dp"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/img_profile"/>

    <TextView
        android:id="@+id/text_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="윤수민"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_marginTop="5.5dp"
        app:layout_constraintTop_toBottomOf="@id/texttext111"
        app:layout_constraintStart_toStartOf="@id/texttext111"/>


    <ImageView
        android:id="@+id/img_review_homeicon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/img_home_green"
        android:layout_marginTop="8.5dp"
        android:layout_marginStart="6.3dp"
        app:layout_constraintStart_toEndOf="@id/text_user_name"
        app:layout_constraintTop_toBottomOf="@id/texttext111" />

    <TextView
        android:id="@+id/text_review_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4.32"
        android:textSize="12sp"
        android:textColor="#0AA864"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/img_review_homeicon"
        app:layout_constraintTop_toBottomOf="@id/texttext111" />

    <TextView
        android:id="@+id/text_review_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(100)"
        android:textSize="12sp"
        android:textColor="#909FBB"
        android:layout_marginStart="3dp"
        android:layout_marginTop="6dp"
        app:layout_constraintStart_toEndOf="@+id/text_review_score"
        app:layout_constraintTop_toBottomOf="@id/texttext111" />

