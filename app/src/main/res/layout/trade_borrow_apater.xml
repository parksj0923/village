<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@color/colorBackground"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/lendstatus"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="22dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/lend_status1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/titleText"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lendstatus_text"
        android:textColor="#3B4861"
        android:textSize="10dp"
        android:text="수락 대기"
        app:layout_constraintStart_toStartOf="@id/lendstatus"
        app:layout_constraintEnd_toEndOf="@id/lendstatus"
        app:layout_constraintTop_toTopOf="@id/lendstatus"
        app:layout_constraintBottom_toBottomOf="@id/lendstatus"/>


    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:gravity="center_vertical"
        android:text="3월 28일 (화), 오후 3시 대여 예정"
        android:textColor="#0AA864"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/item_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lendstatus"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/item_img"
        android:layout_width="42dp"
        android:layout_height="42dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/titleText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_name"
        app:layout_constraintStart_toStartOf="@id/titleText" />

    <TextView
        android:id="@+id/item_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="Cannon EOS 80D DSLR"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toTopOf="@id/item_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_img" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="박성주"
        android:textColor="#000000"
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_name"
        app:layout_constraintTop_toBottomOf="@+id/item_name"/>


</androidx.constraintlayout.widget.ConstraintLayout>