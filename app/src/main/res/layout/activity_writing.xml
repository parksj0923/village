<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WritingUpload.WritingActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/mainlayout">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물건 빌려주기"
            android:textSize="22sp"
            android:textColor="#3B4861"
            android:layout_marginStart="16dp"
            android:layout_marginTop="@dimen/ef_margin_large"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_close"
            android:layout_marginTop="@dimen/top_margin_bigicon"
            android:layout_marginEnd="21dp"
            android:onClick="close"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toTopOf="@id/uploadBtn">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/texteee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물건 사진"
                    android:textSize="12sp"
                    android:textColor="#3B4861"
                    android:layout_marginStart="23dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/imagePickerLayout"
                    android:layout_width="match_parent"
                    android:layout_height="110dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/texteee">
                
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/imagepickerfirst"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                        <ImageView
                            android:onClick="imagePicker"
                            android:id="@+id/upload_background"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_background"
                            android:layout_marginStart="16dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/picture_upload_advise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="물건의 특징이 잘 드러나게 찍어서 올려주세요!"
                            android:textSize="12sp"
                            android:textColor="#3B4861"
                            android:layout_marginTop="6dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/upload_background"
                            app:layout_constraintBottom_toTopOf="@id/picture_upload"/>

                        <ImageView
                            android:id="@+id/picture_upload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_pictureupdate"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/upload_background"
                            app:layout_constraintBottom_toBottomOf="@id/upload_background"/>

                        <TextView
                            android:id="@+id/picture_upload_warning"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="* 반드시 입력해야 하는 창입니다."
                            android:textSize="10sp"
                            android:textColor="#E81862"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/picture_upload"
                            app:layout_constraintBottom_toBottomOf="@id/upload_background"/>


                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/imagepickerRe"
                        android:visibility="gone">
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/listview"
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="16dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/reupload_background"/>

                        <ImageView
                            android:id="@+id/reupload_background"
                            android:onClick="imagePicker"
                            android:layout_width="109dp"
                            android:layout_height="wrap_content"
                            android:background="@drawable/blue_background"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="16dp"
                            app:layout_constraintStart_toEndOf="@id/listview"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"/>

                        <TextView
                            android:id="@+id/picture_reupload_advise"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="사진을 추가하세요"
                            android:textSize="12sp"
                            android:textColor="#909FBB"
                            android:layout_marginTop="6dp"
                            app:layout_constraintStart_toStartOf="@id/reupload_background"
                            app:layout_constraintEnd_toEndOf="@id/reupload_background"
                            app:layout_constraintTop_toBottomOf="@id/picture_reupload"
                            app:layout_constraintBottom_toTopOf="@id/picture_reupload_num"/>

                        <TextView
                            android:id="@+id/picture_reupload_num"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(1/5)"
                            android:textSize="12sp"
                            android:textColor="#909FBB"
                            android:layout_marginBottom="5dp"
                            app:layout_constraintStart_toStartOf="@id/reupload_background"
                            app:layout_constraintEnd_toEndOf="@id/reupload_background"
                            app:layout_constraintTop_toBottomOf="@id/picture_reupload_advise"
                            app:layout_constraintBottom_toBottomOf="@id/reupload_background"/>
                        <ImageView
                            android:id="@+id/picture_reupload"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/icon_pictureupdate"
                            android:layout_marginTop="15dp"
                            app:layout_constraintStart_toStartOf="@id/reupload_background"
                            app:layout_constraintEnd_toEndOf="@id/reupload_background"
                            app:layout_constraintTop_toTopOf="@id/reupload_background"
                            app:layout_constraintBottom_toTopOf="@id/picture_reupload_advise"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <ImageView
                    android:id="@+id/img222"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_rec"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="30dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imagePickerLayout" />


                <TextView
                    android:id="@+id/text3444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="물건명"
                    android:textSize="12sp"
                    android:textColor="#3B4861"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toStartOf="@id/img222"
                    app:layout_constraintTop_toTopOf="@id/img222" />

                <EditText
                    android:id="@+id/itemintroduce_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="빌려주고 싶은 물건을 소개하세요!"
                    android:textSize="12sp"
                    android:textColorHint="#909FBB"
                    android:textColor="#3B4861"
                    android:gravity="start"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/img222"
                    app:layout_constraintEnd_toEndOf="@id/img222"
                    app:layout_constraintBottom_toBottomOf="@id/img222" />

                <TextView
                    android:id="@+id/iteminroduce_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 반드시 입력해야 하는 창입니다."
                    android:textSize="10sp"
                    android:textColor="#E81862"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/img222"
                    app:layout_constraintTop_toBottomOf="@id/img222" />

                <ImageView
                    android:id="@+id/itemintroduce_warningline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/warning_line"
                    app:layout_constraintStart_toStartOf="@id/img222"
                    app:layout_constraintEnd_toEndOf="@id/img222"
                    app:layout_constraintTop_toBottomOf="@id/img222" />






                <ImageView
                    android:id="@+id/category"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:background="@drawable/edit_rec"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="40dp"
                    android:onClick="categorystart"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/img222" />

                <TextView
                    android:id="@+id/text4444"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="카테고리"
                    android:textSize="12sp"
                    android:textColor="#3B4861"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toStartOf="@id/category"
                    app:layout_constraintTop_toTopOf="@id/category" />

                <TextView
                    android:id="@+id/category_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="빌려줄 물건에 해당하는 카테고리 선택하기"
                    android:textSize="12sp"
                    android:textColor="#909FBB"
                    android:gravity="start"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/category"
                    app:layout_constraintEnd_toEndOf="@id/category"
                    app:layout_constraintBottom_toBottomOf="@id/category" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/category_selected_view"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="10dp"
                    android:visibility="gone"
                    android:onClick="categorystart"
                    app:layout_constraintTop_toTopOf="@id/category">

                    <ImageView
                        android:id="@+id/category_selected_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="14dp"
                        app:srcCompat="@drawable/category_black2"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/category_selected_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="도서"
                        android:textColor="#3B4861"
                        android:textSize="18sp"
                        android:layout_marginStart="9dp"
                        app:layout_constraintTop_toTopOf="@id/category_selected_icon"
                        app:layout_constraintStart_toEndOf="@id/category_selected_icon"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/category_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 반드시 입력해야 하는 창입니다."
                    android:textSize="10sp"
                    android:textColor="#E81862"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/category"
                    app:layout_constraintTop_toBottomOf="@id/category" />

                <ImageView
                    android:id="@+id/category_warningline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/warning_line"
                    app:layout_constraintStart_toStartOf="@id/category"
                    app:layout_constraintEnd_toEndOf="@id/category"
                    app:layout_constraintTop_toBottomOf="@id/category" />


                <ImageView
                    android:id="@+id/category_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/arrow_forward"
                    android:layout_marginEnd="2dp"
                    android:layout_marginBottom="5dp"
                    app:layout_constraintEnd_toEndOf="@id/category"
                    app:layout_constraintBottom_toBottomOf="@id/category" />


                <ImageView
                    android:id="@+id/price"
                    android:layout_width="0dp"
                    android:layout_height="88dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="40dp"
                    android:layout_marginEnd="16dp"
                    android:background="@drawable/edit_big_rec"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/category" />

                <TextView
                    android:id="@+id/text555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="희망 대여 가격"
                    android:textSize="12sp"
                    android:textColor="#3B4861"
                    android:layout_marginStart="9dp"
                    android:layout_marginTop="7dp"
                    app:layout_constraintStart_toStartOf="@id/price"
                    app:layout_constraintTop_toTopOf="@id/price" />

                <ImageView
                    android:id="@+id/hourcost_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_clock"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/price"
                    app:layout_constraintTop_toBottomOf="@id/text555" />

                <TextView
                    android:id="@+id/hourtext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1시간"
                    android:textSize="8sp"
                    android:textColor="#909FBB"
                    android:gravity="start"
                    android:layout_marginTop="11dp"
                    android:layout_marginStart="3dp"
                    app:layout_constraintStart_toEndOf="@id/daycost_img"
                    app:layout_constraintTop_toBottomOf="@id/text555" />

                <EditText
                    android:id="@+id/hourcost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="1시간 가격"
                    android:textSize="16sp"
                    android:background="@null"
                    android:textColorHint="#909FBB"
                    android:textColor="#3B4861"
                    android:gravity="start"
                    android:inputType="number"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toEndOf="@id/hourtext"
                    app:layout_constraintEnd_toEndOf="@id/price"
                    app:layout_constraintTop_toBottomOf="@id/text555" />

                <ImageView
                    android:id="@+id/hourcost_warningline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/warning_line"
                    android:layout_marginTop="4dp"
                    app:layout_constraintStart_toStartOf="@id/price"
                    app:layout_constraintEnd_toEndOf="@id/price"
                    app:layout_constraintTop_toBottomOf="@id/hourcost" />


                <ImageView
                    android:id="@+id/daycost_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_calendar"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/price"
                    app:layout_constraintBottom_toBottomOf="@id/price"  />

                <TextView
                    android:id="@+id/daytext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="1일"
                    android:textSize="8sp"
                    android:textColor="#909FBB"
                    android:gravity="start"
                    android:layout_marginBottom="6dp"
                    android:layout_marginStart="4dp"
                    app:layout_constraintStart_toEndOf="@id/daycost_img"
                    app:layout_constraintBottom_toBottomOf="@id/price" />



                <EditText
                    android:id="@+id/daycost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:hint="1일 가격"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColorHint="#909FBB"
                    android:textColor="#3B4861"
                    android:gravity="start"
                    android:layout_marginBottom="5dp"
                    android:inputType="number"
                    app:layout_constraintStart_toStartOf="@id/hourcost"
                    app:layout_constraintEnd_toEndOf="@id/price"
                    app:layout_constraintBottom_toBottomOf="@id/price" />

                <TextView
                    android:id="@+id/cost_warning"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="* 반드시 입력해야 하는 창입니다."
                    android:textSize="10sp"
                    android:textColor="#E81862"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    app:layout_constraintStart_toStartOf="@id/price"
                    app:layout_constraintTop_toBottomOf="@id/price" />

                <ImageView
                    android:id="@+id/daycost_warningline"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/warning_line"
                    app:layout_constraintStart_toStartOf="@id/price"
                    app:layout_constraintEnd_toEndOf="@id/price"
                    app:layout_constraintTop_toBottomOf="@id/price" />




                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/post"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_big_rec"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="40dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/price" >

                    <TextView
                        android:id="@+id/posttitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="게시글 (선택 사항)"
                        android:textSize="12sp"
                        android:textColor="#3B4861"
                        android:layout_marginStart="9dp"
                        android:layout_marginTop="7dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <EditText
                        android:id="@+id/post_edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@null"
                        android:hint="게시글 내용을 작성해주세요. 상세히 작성할 수록 더 많은 사람이 관심을 가질거에요!"
                        android:textSize="12sp"
                        android:textColorHint="#909FBB"
                        android:textColor="#3B4861"
                        android:gravity="start"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:minHeight="100dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/posttitle" />

                </androidx.constraintlayout.widget.ConstraintLayout>





            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <TextView
            android:id="@+id/uploadBtn"
            android:layout_width="match_parent"
            android:layout_height="47dp"
            android:gravity="center"
            android:background="#F0F2F6"
            android:text="게시물 업로드"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#909FBB"
            app:layout_constraintBottom_toBottomOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:id="@+id/categorylayout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
            android:id="@+id/title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리 선택"
            android:textSize="22sp"
            android:textColor="#909FBB"
            android:layout_marginStart="16dp"
            android:layout_marginTop="38dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/icon_close"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="21dp"
            android:onClick="categoryclose"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/category_devide_line"
            app:layout_constraintBottom_toTopOf="@id/category1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/category1"
            android:onClick="category1"
            app:layout_constraintTop_toBottomOf="@id/title2"
            android:layout_marginTop="43dp">

            <ImageView
                android:id="@+id/category_icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"
                app:srcCompat="@drawable/category_black1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전자제품"
                android:textColor="#3B4861"
                android:textSize="18sp"
                android:layout_marginStart="9dp"
                app:layout_constraintTop_toTopOf="@id/category_icon1"
                app:layout_constraintStart_toEndOf="@id/category_icon1"/>

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@drawable/category_devide_line"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
